<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="ReisLavajato" transaction-type="JTA">
		<description> Reis Lavajato</description>
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<class>br.com.reislavajato.entidade.Cargo"</class>
		<class>br.com.reislavajato.entidade.Empresa"</class>
		<class>br.com.reislavajato.entidade.Endereco"</class>
		<class>br.com.reislavajato.entidade.Financeiro"</class>
		<class>br.com.reislavajato.entidade.Funcionario"</class>
		<class>br.com.reislavajato.entidade.GenericEntity"</class>
		<class>br.com.reislavajato.entidade.ItemMovimento"</class>
		<class>br.com.reislavajato.entidade.Marca"</class>
		<class>br.com.reislavajato.entidade.Movimento"</class>
		<class>br.com.reislavajato.entidade.Municipio"</class>
		<class>br.com.reislavajato.entidade.Pessoa"</class>
		<class>br.com.reislavajato.entidade.PessoaFisica"</class>
		<class>br.com.reislavajato.entidade.PessoaJuridica"</class>
		<class>br.com.reislavajato.entidade.Servico"</class>
		<class>br.com.reislavajato.entidade.Telefone"</class>
		<class>br.com.reislavajato.entidade.Usuario"</class>
		<class>br.com.reislavajato.entidade.Veiculo"</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/lavajato" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="@manager#" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.ejb.cfgfile" value="META-INF/hibernate.cfg.xml" />
		</properties>

	</persistence-unit>
</persistence>
