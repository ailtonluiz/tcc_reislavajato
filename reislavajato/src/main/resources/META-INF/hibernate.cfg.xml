<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- Configurações da conexão -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://127.0.0.1:3306/lavajato</property>
		<property name="connection.username">root</property>
		<property name="connection.password">@manager#</property>
		<!-- Pool de conexões JDBC -->
		<property name="connection.pool_size">3</property>
		<!-- Dialeto SQL -->
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<!-- Gerenciamento da Sessão -->
		<property name="current_session_context_class">thread</property>
		<!-- Desabita a cache -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
		<!-- Exibe os comando SQL -->
		<property name="show_sql">true</property>
		<!-- Cria as tabelas -->
		<property name="hbm2ddl.auto">update</property>
		<!-- Mapeamento das entidades -->
		<mapping class="br.com.reislavajato.entidade.Cargo" />
		<mapping class="br.com.reislavajato.entidade.Empresa" />
		<mapping class="br.com.reislavajato.entidade.Endereco" />
		<mapping class="br.com.reislavajato.entidade.Financeiro" />
		<mapping class="br.com.reislavajato.entidade.Funcionario" />
		<mapping class="br.com.reislavajato.entidade.GenericEntity" />
		<mapping class="br.com.reislavajato.entidade.ItemMovimento" />
		<mapping class="br.com.reislavajato.entidade.Marca" />
		<mapping class="br.com.reislavajato.entidade.Movimento" />
		<mapping class="br.com.reislavajato.entidade.Municipio" />
		<mapping class="br.com.reislavajato.entidade.Pessoa" />
		<mapping class="br.com.reislavajato.entidade.PessoaFisica" />
		<mapping class="br.com.reislavajato.entidade.PessoaJuridica" />
		<mapping class="br.com.reislavajato.entidade.Servico" />
		<mapping class="br.com.reislavajato.entidade.Telefone" />
		<mapping class="br.com.reislavajato.entidade.Usuario" />
		<mapping class="br.com.reislavajato.entidade.Veiculo" />

	</session-factory>
</hibernate-configuration>